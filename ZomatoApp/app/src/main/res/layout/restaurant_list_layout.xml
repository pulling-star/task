<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/restaurantImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurantTitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Oyalo Pizza"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/restaurantImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurantRating"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="4.2"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_action_name"
        app:layout_constraintStart_toEndOf="@id/restaurantImageView"
        app:layout_constraintTop_toBottomOf="@+id/restaurantTitle" />

    <TextView
        android:id="@+id/restaurantLocation"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Cantonment"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/restaurantImageView"
        app:layout_constraintTop_toBottomOf="@+id/restaurantRating" />


</androidx.constraintlayout.widget.ConstraintLayout>