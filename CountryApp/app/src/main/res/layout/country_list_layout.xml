<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="2dp"
    android:background="#EFF8F5">

    <ImageView
        android:id="@+id/flagImage"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="2dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/capitalTextView"/>

    <TextView
        android:id="@+id/countryName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:text="India"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/flagImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/flagImage"/>

    <TextView
        android:id="@+id/capitalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Capital: Kabul"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/flagImage"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/regionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Region: Asia"
        android:padding="4dp"
        android:textColor="@color/black"
        android:layout_margin="4dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/flagImage"
        app:layout_constraintTop_toBottomOf="@id/capitalTextView"/>

    <TextView
        android:id="@+id/subregionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="SubRegion: Asia"
        android:padding="4dp"
        android:textColor="@color/black"
        android:layout_margin="4dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/flagImage"
        app:layout_constraintTop_toBottomOf="@id/regionTextView"/>

    <TextView
        android:id="@+id/populationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Population: 100000000"
        android:padding="4dp"
        android:textColor="@color/black"
        android:layout_margin="4dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/flagImage"
        app:layout_constraintTop_toBottomOf="@id/subregionTextView"/>

    <TextView
        android:id="@+id/bordersTextView"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        tools:text="Borders: NFA,QAF"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/flagImage"
        app:layout_constraintTop_toBottomOf="@id/populationTextView"/>

    <TextView
        android:id="@+id/languagesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Languages: Tamil,Hindi,English"
        android:padding="4dp"
        android:textColor="@color/black"
        android:layout_margin="4dp"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toEndOf="@id/flagImage"
        app:layout_constraintTop_toBottomOf="@id/bordersTextView"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>