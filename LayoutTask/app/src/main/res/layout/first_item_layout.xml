<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_margin="4dp"
    android:background="#f5fffa"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <ImageView
        android:id="@+id/coverImage"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@color/teal_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/googleimage"
        android:scaleType="centerCrop"
        android:layout_marginTop="45dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/editImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="50dp"
        android:padding="8dp"
        android:src="@drawable/editimage"
        app:layout_constraintTop_toBottomOf="@id/coverImage"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/websiteImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/visitimage"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editImage"
        app:layout_constraintTop_toBottomOf="@id/coverImage"/>

    <TextView
        android:id="@+id/companyNametextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YaarMe"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:padding="2dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/profileImage"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        />
    <TextView
        android:id="@+id/companyInfotextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2.5dp"
        android:padding="4dp"
        android:textSize="15sp"
        android:text="Information Technology &amp; Services Raipur, Chattisgarh"
        app:layout_constraintStart_toStartOf="@id/companyNametextView"
        app:layout_constraintTop_toBottomOf="@id/companyNametextView"/>

    <TextView
        android:id="@+id/followersTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="4dp"
        android:text="1000 followers"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/companyInfotextView"
        app:layout_constraintTop_toBottomOf="@id/companyInfotextView"/>

    <TextView
        android:id="@+id/aboutTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Building the most luxirious social media"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:padding="4dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/followersTextView"
        app:layout_constraintTop_toBottomOf="@id/followersTextView"/>
</androidx.constraintlayout.widget.ConstraintLayout>
